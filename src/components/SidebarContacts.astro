---
import ContactItem from "./ContactItem.astro";

const { buttonText, button2Text } = Astro.props;

const contactsTashkent = {
    phoneSales: {
        title: "Отдел продаж",
        label: "+998 71 987 65 43",
        href: "tel: +998719876543",
        caption: "С 09:00 до 18:00",
        icon: "call",
        iconColorClass: "text-accent-green",
    },
    telegram: {
        title: "Telegram",
        label: "@mdtech",
        href: "https://t.me/",
        caption: "",
        icon: "share_post",
        iconColorClass: "text-accent-blue",
    },
    email: {
        title: "E-mail",
        label: "mail@mdtech.uz",
        href: "mailto: mail@mdtech.uz",
        caption: "",
        icon: "email",
        iconColorClass: "text-accent-red",
    },
    address: {
        title: "Адрес",
        label: "Юнусабадский район, ул. Амира Темура, 25, офис 4",
        href: "",
        caption: "",
        icon: "new_account",
        iconColorClass: "text-accent-green",
    },
};
---

<aside
    class="sidebarContacts"
>
    <div class="sidebarContacts-wrapper">
        <div class="sidebarContacts-mapWrapper">
            <div
                class="sidebarContacts-map"
            >
                <a
                    href="https://yandex.uz/maps/10335/tashkent/?utm_medium=mapframe&utm_source=maps"
                    style="color:#eee;font-size:12px;position:absolute;top:0px;"
                    >Ташкент</a
                ><a
                    href="https://yandex.uz/maps/geo/1750709438/?ll=69.399357%2C41.233683&utm_medium=mapframe&utm_source=maps&z=11.14"
                    style="color:#eee;font-size:12px;position:absolute;top:14px;"
                    >Яндекс Карты — транспорт, навигация, поиск мест</a
                ><iframe
                    src="https://yandex.uz/map-widget/v1/?ll=69.399357%2C41.233683&mode=search&ol=geo&ouri=ymapsbm1%3A%2F%2Fgeo%3Fdata%3DCgoxNzUwNzA5NDM4EhZPyrt6YmVraXN0b24sIFRvc2hrZW50IgoNOY-KQhWgPiVC&z=11.14"
                    allowfullscreen="true"
                    class="relative w-full h-full"></iframe>
            </div>
        </div>
        <div class="sidebarContacts-content">
            <ul class="sidebarContacts-list">
                {
                    Object.values(contactsTashkent).map((item) => (
                        <li>
                            <ContactItem data={item} />
                        </li>
                    ))
                }
            </ul>
            <div class="sidebarContacts-buttons">
                <a
                    href="#"
                    set:html={buttonText}
                    class="sidebarContacts-button"
                />
                {
                    button2Text ? (
                        <a
                            href="#"
                            set:html={button2Text}
                            class="sidebarContacts-link"
                        />
                    ) : (
                        ""
                    )
                }
            </div>
        </div>
    </div>
</aside>
