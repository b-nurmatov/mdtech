---
import Container from "../layouts/Container.astro";

const {ptClass, pbClass} = Astro.props;

const pt = ptClass ? ptClass : "pt-12"
const pb = pbClass ? pbClass : "pb-12"
---

<Container class={`${pt} ${pb}`}>
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div class="lg:col-start-1 lg:col-end-3">
            <slot />
        </div>
        <div class="lg:col-start-3 lg:col-end-4 flex flex-col gap-4">
            <slot name="sidebar" />
        </div>
    </div>
</Container>
