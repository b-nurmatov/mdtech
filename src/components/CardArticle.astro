---
import CardImageBlock from "./CardImageBlock.astro";

const { title, description, tags, date, dateValue, image, href } = Astro.props;
---
<article class="flex flex-col-reverse sm:flex-row-reverse sm:items-start gap-4 sm:gap-8 py-8 border-b border-surface-4">
    <div class="@container flex-1 flex flex-col gap-4 self-stretch justify-center">
        <h3 set:html={title} class="text-3xl/[100%] font-bold @max-[20rem]:text-2xl/[100%] @max-[15rem]:text-xl/[100%]" />
        <p set:html={description} class="text-emph-medium text-base" />
        <a
            href={href}
            set:html="Читать"
            class="text-lg/[100%] font-bold text-accent-green hover:text-accent-green-dark active:text-accent-green-light underline"
        />
    </div>
    <CardImageBlock
        image={image}
        alt={title}
        infoBlock={true}
        date={date}
        dateValue={dateValue}
        tags={tags}
        aspectRatio="aspect-[3/2]"
        border={true}
        rounded={true}
        overlay={true}
        class="flex-1"
    />
</article>
